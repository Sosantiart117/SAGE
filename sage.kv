<MainLayout>:
	canvas:
		Color:
			rgb: 227, 233, 241
		Rectangle:
			pos: self.pos
			size: self.size
	
	MainBar:
		size_hint: 1, 0.1
		pos_hint: {'top':1}
		padding: "10dp"

	BoxLayout:
		size_hint: 1, 0.9
		pos_hint: {'y':0}

		Navmenu:
			size_hint: 0.4,1

		SageZone:
			id: zone
			padding: "10dp"

		#size_hint: 0.8,0.3

<MainBar>:
	BoxLayout:
		Image:
			source: 'media/Logo_2SE.png' 

		Label:
			text: root.title
			size_hint: 1,1
			
		Button:
			size_hint: .30,.20
			pos_hint: {'center_x':0.5}
			Image:
				source : 'media/perfil22.png'
				center_x: self.parent.center_x
				center_y: self.parent.center_y
			#width: '100dp'
			#text: "Perfil"
				


<Navmenu>:
	orientation: "vertical"
	padding: '0dp' #20
	spacing: '0dp' #20

	Button: 
		text: '• Tareas'
		font_size:28
		background_color:(.21, .67, 96, .8)
		bold: True
		on_press: root.to_task()
	Button: 
		text: '• Calendario'
		font_size:28
		background_color:(.21, .67, 96, .8)
		bold: True
		on_press: root.to_cal()
	Button: 
		text: '• Apuntes'
		font_size:28
		background_color:(.21, .67, 96, .8)
		bold: True
		on_press: root.to_notes()
	Button: 
		text: '• Proyectos'
		font_size:28
		background_color:(.21, .67, 96, .8)
		bold: True
		on_press: root.to_proyectos()
