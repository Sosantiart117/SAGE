<Main>:
	Bar:
		size_hint: 1, 0.1
		pos_hint: {'top':1}
		padding: "10dp"
	MainPager:
		id: main_pager
		size_hint: 1, 0.9
	
<MainPager>:
	# Profile:
	Start:
	MainScreen:
		id: main

<MainScreen>:
	name: "main"
	MainLayout:
		id: main

<MainLayout>:
	canvas.before:
		Color:
			rgba: .8,.8,.8,1
		Rectangle:
			pos: self.pos
			size: self.size
	
	BoxLayout:
		size_hint: 1, 1
		pos_hint: {'y':0}

		Navmenu:
			size_hint: 0.4,1

		SageZone:
			id: zone
			padding: "10dp"
	
<Bar>:
	canvas.before:
		Color:
			rgba: .8,.8,.8,1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		Button:
			text: "Logo"
			size_hint: .5,1
			on_press: root.to_start()
		Label:
			text: root.title
			size_hint: 2,1
		Button:
			size_hint: None ,1
			width: '100dp'
			text: "Perfil"

<Navmenu>:
	orientation: "vertical"
	padding: '20dp'
	spacing: '20dp'

	Button: 
		text: 'Tareas'
		on_press: root.to_task()
	Button: 
		text: 'Calendario'
		on_press: root.to_cal()
	Button: 
		text: 'Apuntes'
		on_press: root.to_notes()
	Button: 
		text: 'Proyectos'
		on_press: root.to_proyectos()

<StartLayout>:
	canvas.before:
		Color:
			rgba: .8,.8,.8,1
		Rectangle:
			pos: self.pos
			size: self.size

	GridLayout:
		padding: '50dp'
		spacing: '80dp'
		cols: 2
		rows: 2

		Button: 
			text: 'Tareas'
			on_press: root.to_main('Tasks')
		Button: 
			text: 'Calendario'
			on_press: root.to_main('Calendar')
		Button: 
			text: 'Apuntes'
			on_press: root.to_main('Notes')
		Button: 
			text: 'Proyectos'
			on_press: root.to_main('Proyects')
