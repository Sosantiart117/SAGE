<MainLayout>:
	canvas.before:
		Color:
			rgba: .8,.8,.8,1
		Rectangle:
			pos: self.pos
			size: self.size
	
	MainBar:
		size_hint: 1, 0.1
		pos_hint: {'top':1}
		padding: "10dp"

	BoxLayout:
		size_hint: 1, 0.9
		pos_hint: {'y':0}

		Navmenu:
			size_hint: 0.4,1

		SageZone:
			id: zone
			padding: "10dp"
	
<MainBar>:
	BoxLayout:
		Button:
			text: "Logo"
			size_hint: .5,1
		Label:
			text: root.title
			size_hint: 2,1
		Button:
			size_hint: None ,1
			width: '100dp'
			text: "Perfil"

<Navmenu>:
	orientation: "vertical"
	padding: '20dp'
	spacing: '20dp'

	Button: 
		text: 'Tareas'
		on_press: root.to_task()
	Button: 
		text: 'Calendario'
		on_press: root.to_cal()
	Button: 
		text: 'Apuntes'
		on_press: root.to_notes()
	Button: 
		text: 'Proyectos'
		on_press: root.to_proyectos()
