			BoxLayout:
				orientation: 'vertical'
				size_hint: .3,.5
				pos_hint: {'top':1}
				padding: '5dp'
				spacing: '20dp'

				Button:
					text: 'ordenar'
				Button:
					text: 'ordenar'
				Button:
					text: 'ordenar'

<task_button>:
	size_hint: None, None
	size: '20dp','40dp'
