<Calendar>:
	name:"Calendar"
	# Layout base para el componente
	BoxLayout:
		padding: "10dp"
		spacing: "10dp"
		orientation: 'vertical'
		Spinner:
			id: view_selector
			size_hint: None,0.07
			width: "150dp"
			pos_hint: {'right':1,'top':1}
			text: "Mes"
			values: ["Mes","Día","Semana","Año"]
			on_text: pager.move_to(view_selector.text)
		cal_zone:
			size_hint: 1,1
			pos_hint: {'x':0,'y':0}
			id: pager

<MesView>:
	name: "Mes"
	BoxLayout:
		id: mes_box
		orientation: 'vertical'
		BoxLayout:
			size_hint:1,.1
			padding: "5dp"
			spacing: "5dp"
			Spinner:
				id: sel_mon
				on_text: root.to_mon(self.text)
			Spinner:
				size_hint:.33,1
				id: sel_yea
				on_text: root.to_yea(self.text)

<DiaView>:
	name: "Dia"
	BoxLayout:
		id: dia_box
		orientation: 'vertical'
		BoxLayout:
			size_hint:1,.1
			padding: "5dp"
			spacing: "5dp"
			Spinner:
				id: sel_mon
				on_text: root.to_mon(self.text)
			Spinner:
				id: sel_yea
				on_text: root.to_yea(self.text)
			Spinner: 
				id: sel_day
				on_text: root.to_day(self.text)

<Semana>:
	name: "Semana"
	Label:
		text: "Soy un sem"

<Ao>:
	name: "Ao"
	BoxLayout:
		id: ao_box
		orientation: 'vertical'
		padding: "5dp"
		spacing: "5dp"
		BoxLayout:
			size_hint:1,.1
			padding: "5dp"
			spacing: "5dp"
			Spinner:
				id: sel_yea
				on_text: root.to_yea(self.text)

# Objetos para las vista

<Mes>:
	# cols: 8
	orientation: 'vertical'
	padding: "5dp"
	spacing: "10dp"

<Dia>:
	orientation: 'vertical'
	padding: "5dp"
	spacing: "10dp"


<day_button>:
	on_press: root.on_clicked()
